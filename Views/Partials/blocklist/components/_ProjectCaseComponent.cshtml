@using Umbraco.Cms.Core.Models.Blocks;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage;
@{
    var projects = Model.Value<IEnumerable<BlockListItem>>("projectCases").Select(x => x.Content);
}

    @foreach (var item in projects) {
        <div>
        @{
            var projectImage = item.Value<IPublishedContent>("projectImage");
            var imageUrl = projectImage?.Url();
            
            if (imageUrl != null){
                <img src="@imageUrl" alt="@item.Value("projectImageAltText")" />
            }
        }
            <div class="project-content">
                <h5>@item.Value("projectTitle")</h5>
                <a target="_blank" href="@item.Value("projectReadMoreUrlLink")">Read More
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M14 2.5a.5.5 0 0 0-.5-.5h-6a.5.5 0 0 0 0 1h4.793L2.146 13.146a.5.5 0 0 0 .708.708L13 3.707V8.5a.5.5 0 0 0 1 0v-6z" />
                    </svg>
                </a>
            </div>
        </div>
    }
