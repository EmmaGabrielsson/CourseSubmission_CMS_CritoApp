@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "_Layout.cshtml";
}

@await Html.PartialAsync("_BrandsSection")
@await Html.PartialAsync("_FeaturesSection")
@await Html.PartialAsync("_AboutCompanySection")
@await Html.PartialAsync("_ServicesSection")
@await Html.PartialAsync("_ChooseUsSection")


        <section class="project-section">
            <p class="red-title">Project & Case Studies</p>
            <h3>@Model.Value("projectListTitle")</h3>
            <div>
                @await Html.PartialAsync("blocklist/components/_ProjectCaseComponent")
            </div>
            <a class="all-project-btn" target="_blank" href="@Model.Value("projectButtonUrl")" title="all recent projects">
                @Model.Value("projectButtonText") 
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up-right" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14 2.5a.5.5 0 0 0-.5-.5h-6a.5.5 0 0 0 0 1h4.793L2.146 13.146a.5.5 0 0 0 .708.708L13 3.707V8.5a.5.5 0 0 0 1 0v-6z" />
                </svg>
            </a>
        </section>


@await Html.PartialAsync("_TeamSection")
@await Html.PartialAsync("_TestimonialSection")
@await Html.PartialAsync("_SmallArticleSection")
@await Html.PartialAsync("_SignUpFormSection")